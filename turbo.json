{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "./dist"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "outputs": [
        "http://localhost:4200"
      ]
    },
    "docs:start": {
      "cache": false,
      "persistent": true,
      "outputs": [
        "http://localhost:4201"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}